
@{
    ViewData["Title"] = "Ceshi2";
}

<h1>Ceshi2</h1>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/js/vue.js"></script>
<script src="~/js/axios.js"></script>
<link href="~/static/admin/layui/css/layui.css" rel="stylesheet" />
<link href="~/static/admin/css/admin.css" rel="stylesheet" />

<html>
<head>
    
    <meta charset="utf-8">
    <title>ECharts</title>
    <!-- 引入 echarts.js -->
    <script src="https://cdn.staticfile.org/echarts/3.3.2/echarts.min.js"></script>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="width: 600px;height:400px;"></div>
    <div id="main1" style="width: 600px;height:400px;"></div>
</body>
</html>
@section scripts{
    <script>
        $(function () {
            Show();
            Show1();
        })
        function Show() {
            var h1 = 10;
            var h2 = 20;
            var h3 = 30;
            var h4 = 40;
            var h5 = 50;
            $.ajax({
                url: "http://localhost:65300/api/shujubaobiao/WeiXiu",
                type: "get",
                success: function (i) {
                    h1 = parseInt(i.split(',')[0]);
                    h2 = parseInt(i.split(',')[1]);
                    h3 = parseInt(i.split(',')[2]);
                    h4 = parseInt(i.split(',')[3]);
                    h5 = parseInt(i.split(',')[4]);
                    var myChart = echarts.init(document.getElementById('main1'));

                    // 指定图表的配置项和数据
                    option = {
                        title: {
                            text: '订单状态比例',
                            subtext: '订单信息',
                            left: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            formatter: '{a} <br/>{b} : {c} ({d}%)'
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left',
                            data: ['驳回', '待审核', '待接单', '维修中', '已完成']
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '60%'],
                                data: [
                                    { value: h5, name: '驳回' },
                                    { value: h1, name: '待审核' },
                                    { value: h2, name: '待接单' },
                                    { value: h3, name: '维修中' },
                                    { value: h4, name: '已完成' }
                                ],
                                emphasis: {
                                    itemStyle: {
                                        shadowBlur: 10,
                                        shadowOffsetX: 0,
                                        shadowColor: 'rgba(0, 0, 0, 0.5)'
                                    }
                                }
                            }
                        ]
                    };

                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
            })
        }

        function Show1() {
            $.ajax({
                url: "http://localhost:65300/api/shujubaobiao/WeiXiuNum",
                type: "get",
                success: function (msg) {
                    var h = "";
                    var myChart = echarts.init(document.getElementById('main'));
                    var h1 = msg.split(':')[1].split(',');
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: '所有工单的状态图'
                        },
                        tooltip: {},
                        legend: {
                            data: ['数量']
                        },
                        xAxis: {
                            data: ["" + msg.split(':')[0].split(',')[0] + "", "" + msg.split(':')[0].split(',')[1] + "", "" + msg.split(':')[0].split(',')[2] + "", "" + msg.split(':')[0].split(',')[3] + ""]
                        },
                        yAxis: {},
                        series: [{
                            name: '数量',
                            type: 'bar',
                            data: h1
                        }]
                    };

                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
                // 基于准备好的dom，初始化echarts实例
            })
        }
    </script>
}